hw-root
{
  NIC => new Device()
  {
    .hid = "mv643xx";
    new-res Mmio(0xF1070000 .. 0xF107FFFF);    
    new-res Irq(46);
    new-res Irq(11);
  }

  DMA => new Device()
  {
    .hid = "dmamem";
    new-res Mmio_ram(2097152,0);
  }

  BOT => new Device()
  {
    .hid = "boot";
    new-res Mmio(0xFED00000 .. 0xFEDFFFFF);
  }
}

l4lx => new System_bus()
{
  BOT => wrap(hw-root.BOT);
  DMA => wrap(hw-root.DMA);
  NIC => wrap(hw-root.NIC);
}
